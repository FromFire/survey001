<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">
    <!--  Start : Your code should be within this block -->
    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_marginTop="54dp"

        android:text="Question 10"
        android:textColor="@android:color/black"
        android:textSize="25sp" />


    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"

        android:layout_marginLeft="87dp"
        android:layout_marginTop="110dp"
        android:text="How old are you?"
        android:textSize="18sp" />

    <RadioGroup
        android:id="@+id/q10rgp1"
        android:layout_width="244dp"
        android:layout_height="343dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="79dp"
        android:layout_marginTop="156dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/q10rb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="under 18"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/q10rb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19-25"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/q10rb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25-35"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/q10rb4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="beyond 35"
            android:textSize="20sp" />


    </RadioGroup>

    <Button
        android:id="@+id/next10"
        android:layout_width="234dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="527dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:onClick="next10"
        android:text="NEXT"
        android:textColor="#ff00ff" />

    <!-- END    : Your code should be within this block -->

</RelativeLayout>
