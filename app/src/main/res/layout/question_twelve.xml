<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">
    <!--  Start : Your code should be within this block -->

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_marginTop="54dp"

        android:text="Question 12"
        android:textColor="@android:color/black"
        android:textSize="25sp" />


    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"

        android:layout_marginLeft="87dp"
        android:layout_marginTop="110dp"
        android:text="How much money do you earn \n
        per month?"
        android:textSize="18sp" />

    <RadioGroup
        android:id="@+id/q12rgp1"
        android:layout_width="257dp"
        android:layout_height="187dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="79dp"
        android:layout_marginTop="156dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/q12rb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="I haven't got a job"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/q12rb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Under 3000"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/q12rb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3000-5000"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/q12rb4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5000-10000"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/q12rb5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="more than 10000"
            android:textSize="20sp" />

    </RadioGroup>

    <Button
        android:id="@+id/next12"
        android:layout_width="234dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="423dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:onClick="next12"
        android:text="NEXT"
        android:textColor="#ff00ff" />
    <!-- END    : Your code should be within this block -->

</RelativeLayout>